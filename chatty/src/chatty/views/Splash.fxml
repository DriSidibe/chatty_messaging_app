<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chatty.controllers.SplashController">
   <children>
      <StackPane prefHeight="450.0" prefWidth="449.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" style="-fx-scale-x: 3; -fx-scale-y: 3;" VBox.vgrow="ALWAYS">
               <image>
                  <Image url="@../static/images/chatty.png" />
               </image>
            </ImageView>
            <VBox alignment="BOTTOM_RIGHT">
               <children>
                  <Label fx:id="info_msg" textFill="WHITE">
                     <StackPane.margin>
                        <Insets bottom="20.0" right="20.0" />
                     </StackPane.margin>
                     <VBox.margin>
                        <Insets bottom="20.0" right="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</HBox>
